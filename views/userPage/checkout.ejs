    <script>
        function validateForm() {
            // Reset error messages
            document.getElementById('nameError').innerText = '';
            document.getElementById('phoneError').innerText = '';
            document.getElementById('countryError').innerText = '';
            document.getElementById('landmarkError').innerText = '';
            document.getElementById('cityError').innerText = '';
            document.getElementById('addressError').innerText = '';
            document.getElementById('pincodeError').innerText = '';

            // Get form values
            var name = document.getElementById('name').value;
            var phone = document.getElementById('phone').value;
            var country = document.getElementById('country').value;
            var landmark = document.getElementById('landmark').value;
            var city = document.getElementById('city').value;
            var address = document.getElementById('address').value;
            var pincode = document.getElementById('pincode').value;

            // Flag to check if the form is valid
            var isValid = true;

            // Validate Name
            if (name.trim() === '') {
                document.getElementById('nameError').innerText = 'Name is required';
                isValid = false;
            }

            // Validate Phone
            if (phone.trim() === '') {
                document.getElementById('phoneError').innerText = 'Phone is required';
                isValid = false;
            } else if (!/^\d{10}$/.test(phone)) {
                document.getElementById('phoneError').innerText = 'Invalid phone number';
                isValid = false;
            }

            // Validate Country
            if (country.trim() === '') {
                document.getElementById('countryError').innerText = 'Country is required';
                isValid = false;
            }

            // Validate Landmark
            // Add similar validation for other fields
            if (landmark.trim() === '') {
                document.getElementById('landmarkError').innerText = 'Country is required';
                isValid = false;
            }

            // Validate City
            if (city.trim() === '') {
                document.getElementById('cityError').innerText = 'City is required';
                isValid = false;
            }

            // Validate Address
            if (address.trim() === '') {
                document.getElementById('addressError').innerText = 'Address is required';
                isValid = false;
            }

            // Validate Pin Code
            if (pincode.trim() === '') {
                document.getElementById('pincodeError').innerText = 'Pin Code is required';
                isValid = false;
            } else if (!/^\d{5}$/.test(pincode)) {
                document.getElementById('pincodeError').innerText = 'Invalid Pin Code';
                isValid = false;
            }

            return isValid;
        }
    </script>




