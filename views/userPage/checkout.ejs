    <script>
        function calculateTotal(code) {
            //console.log(2222, code);
            const total = document.getElementById(`totalval`).innerText;

            const amount = total.replace('₹', ''); // Remove the currency symbol
           // console.log(amount);

            document.getElementById('cashError').innerText = ''



            $.ajax({
                url: '/calculateCoupon',
                method: 'POST',

                data: ({ code: code, amount: amount }),


                success: function (response) {
                    // handle success response
                    if (response.status === 'success') {

                        var newData = response.data;

                        const discount=amount-response.data

                        document.getElementById('discount').innerText = `₹${discount}`

                        document.getElementById(`totalval`).innerText = `₹${newData}`

                        //console.log(newData);
                    } else if (response.status === 'date') {

                        document.getElementById('cashError').innerText = 'The coupon has expired.'

                    } else if (response.status === 'minAmount') {

                        document.getElementById('cashError').innerText = 'The minimum amount required for this coupon has not been reached.'

                    } else if (response.status === 'noQty') {

                        document.getElementById('cashError').innerText = 'No quantity available for this coupon.'

                    } else if (response.status === 'used') {

                        document.getElementById('cashError').innerText = 'This coupon already used by the user.';

                    } else {

                        document.getElementById('cashError').innerText = 'An error occurred. Please try again later.';

                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    // handle error
                    console.error("Error:", errorThrown);
                }
            });

        }


        //-------------------------------------------------
        var modal = document.getElementById("myModal");
        var span = document.getElementsByClassName("close")[0];

        function applyCoupon(event) {
            event.preventDefault();
            var couponDataString = document.getElementById("couponData").value;

            //console.log(1111,couponDataString);

           
            var couponData = JSON.parse(couponDataString);

            //console.log(2222,couponData);
            
            const displaydata = couponData.map((valu) => ({ name: valu.couponName, code: valu.couponCode, minimum: String(valu.minAmount) }));


            var availableCoupon = displaydata.map((item) => '<strong>Coupon Name:</strong> ' + item.name + '<br>' + '<strong>Coupon Code:</strong>' + item.code + '<br>' + '<strong>minimun Amount:</strong>' + item.minimum);

            var couponList = document.getElementById("couponList");
            couponList.innerHTML = "";

            availableCoupon.forEach(function (coupon) {

                var hr = document.createElement("hr");
                couponList.appendChild(hr);

                var li = document.createElement("li");
                li.innerHTML = coupon; 
                couponList.appendChild(li);

                var br = document.createElement("br");
                couponList.appendChild(br);


                
                var button = document.createElement("button");
                button.textContent = "Apply";
                button.classList.add("apply-btn");


                couponList.appendChild(button);


                // Add an event listener to the "Apply" button
                button.addEventListener("click", function () {



                    var couponCode = coupon.split('<strong>Coupon Code:</strong>')[1].split('<br>')[0].trim();
                    console.log("Coupon Code:", couponCode);

                    document.getElementById('inputData').value = couponCode

                    calculateTotal(couponCode)


                    modal.style.display = "none";
                });

                // Add a line break after each button

                var br1 = document.createElement("br");
                couponList.appendChild(br1);
            });



            modal.style.display = "block";
        }

        span.onclick = function () {
            modal.style.display = "none";


        }

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }


    </script>

