                                                        let maxOffer = null;
                                                    
                                                        offerdata.forEach((datas) => {
                                                            if (datas._id.toString() === products[i].category.offer.toString() && datas.percentage > maxPercentage) {
                                                                maxPercentage = datas.percentage;
                                                                maxOffer = datas;
                                                            }
                                                        });
                                                    
