    <script>
        function addToWishlist(productid){
            const userchek=document.getElementById(`user`).value;
            
            if(userchek){

            Swal.fire({
                title: 'Product Added to Wishlist!',
                text: 'You have successfully added the product to your Wislist.',
                icon: 'success',
                showCancelButton: false,
                confirmButtonText: 'OK'
            }).then((result) => {
                // If the user clicks "OK", submit the form
                if (result.isConfirmed) {

                   fetch(`/addWishlist?productid=${productid}`,{
                    method:'post'
                   })
                }
            });
            }else{
                window.location.href = '/wishlist';
            }

            
        }
    </script>
    

    <script>
        
        function addToCart(productId) {
            const quantity=document.getElementById(`qty-${productId}`).value;
        //console.log(quantity);
           if(quantity>0){
            const userchek=document.getElementById('user').value;
       
            const offer=document.getElementById(`newprice-${productId}`).value;

            document.getElementById(`offerPrice-${productId}`).value=offer;

            //console.log(offer);

             if(userchek){
            Swal.fire({
                title: 'Product Added to Cart!',
                text: 'You have successfully added the product to your cart.',
                icon: 'success',
                showCancelButton: false,
                confirmButtonText: 'OK'
            }).then((result) => {
                
                if (result.isConfirmed) {
                    $.ajax({
                        url:`/addcart/${productId}`,
                        method:'POST',
                        data:{
                            price:offer
                        }
                    })

                    //document.getElementById(`addToCartForm_${productId}`).submit();
                }
            });
        }else{
                window.location.href = '/wishlist';
        }

        }
    }
