    <script>
        function amountBtn(UserId) {



            const amount = document.getElementById('amount').value
            const amountError = document.getElementById('amountError')
            amountError.innerText = ''
            if (amount) {

                if (amount === '' || isNaN(amount)) {
                    amountError.innerText = 'Please enter a valid amount';
                    return; // Stop further execution if validation fails
                }
                if (amount.length > 4) {
                    amountError.innerText = 'Please enter an amount less than 9999';
                    return; // Stop further execution if validation fails
                }


                $.ajax({
                    url: `/verifyWalletAmount`,
                    method: 'POST',
                    data: ({ amount: amount }),
                    success: function (responce) {
                        if (responce.status == 'success') {
                            razerPayment(responce.order,UserId);
                        };
                    }
                })




            } else {

                document.getElementById('btn').innerText = 'Submit'

                document.getElementById('amount').type = 'text'



            }
        }



        function razerPayment(data,UserId) {


            var options = {

                "key": "rzp_test_fz8s5MTBK2bkp1",
                "amount": data.amount,
                "currency": "INR",
                "name": "Acme Corp",
                "description": "Test Transaction",
                "image": "https://example.com/your_logo",
                "order_id": data.id,
                "handler": function (response) {
                    //console.log('success');
                    verifypayment(response, data,UserId);
                },
                "theme": {
                    "color": "#3399cc"
                }

            };
            var rzp1 = new Razorpay(options);
            rzp1.on('payment.failed', function (response) {
                console.log('fail');



            });
            rzp1.open();

        }
        function verifypayment(payment, orderdatas,UserId) {

            //console.log(5555555,payment,66666,orderdatas,9999,UserId);
            $.ajax({
                url: '/addAmount',
                data: {
                    payment,
                    amount:orderdatas,
                    UserId

                },
                method: 'post',
                success: (response) => {
                    //console.log(777,response);
                    if (response.status=='success') {

                       // console.log(234,response);
                       window.location.reload();
                        


                    } else {
                        console.log('fail');
                    }
                }
            })
        }

