    <script>

        async function dataupdate(quantity,cart,product){
        try {
            fetch(`/updateCart?qty=${quantity}&cartid=${cart}&productid=${product}`,{
                  method: "PATCH"
            
            })

            .then((response)=>response.json())

            .then((data) => {
            if (data.status === 'success') {
              //console.log(data);

               
              
             window.location.reload(true); // Reload the current page
              
            } else {
              console.log('fail');
            }
            })

            

            
            
        } catch (error) {
            console.log(error.message);
        }
            

        }

        
        // const totalquantity = document.getElementById(`totalquantity`);
        // const totel = totalquantity.value;
        // console.log(totel);
        


    function quantityupdate(cartid, productid) {
    const totalquantity = document.getElementById(`totalquantity_${productid}`);
    const quantityinput = document.getElementById(`quantityinput_${productid}`);
    const quantityValue = parseInt(quantityinput.value, 10);
    const totalQuantityValue = parseInt(totalquantity.value, 10);

    console.log(totalQuantityValue);
    let check = true;
    let totel = true;

    if (isNaN(quantityValue) || quantityValue <= 0) {
        quantityinput.value = "1";
        check = false;
    }

    if (quantityValue > totalQuantityValue) {
        quantityinput.value = totalQuantityValue;
        quantityValue=totalQuantityValue.value
        //totel=false
    }

    if (check && totel) {
        dataupdate(quantityValue, cartid, productid);
    }
}

    </script>

    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
       function showSweetMessage(cartId) {
        // Customize the sweet message using SweetAlert
        Swal.fire({
            title: 'Sweet Message!',
            text: 'Do you want to remove this item from the cart?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Yes, remove it!',
            cancelButtonText: 'No, keep it'
        }).then((result) => {
            // If the user clicks "Yes", submit the form
            if (result.isConfirmed) {
                document.getElementById(`deleteForm_${cartId}`).submit();
            }
        });
    }
    </script>
    


